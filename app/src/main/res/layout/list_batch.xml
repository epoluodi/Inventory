<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/back_list"

    android:alpha="0.8"
    android:clickable="true"
    android:id="@+id/r1"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_head_style"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/headimg"
        android:focusable="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="1"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:id="@+id/txt_head"
        android:layout_alignRight="@+id/headimg"
        android:layout_alignLeft="@+id/headimg"
        android:paddingStart="5dp"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开发部盘点"
        android:layout_toRightOf="@+id/headimg"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/txt_pdname"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/list_right"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>